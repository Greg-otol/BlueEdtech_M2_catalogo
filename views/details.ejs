    <title>Detalhes do Livro</title>
  </head>

  <body>
    <%- include("./partials/header.ejs") %>
    <main id="details">
      <div class="book">
        <img
          id="img_details"
          src="<%= book[0].image %>"
          alt="Imagen do Livro <%=book[0].name %> "
        />
        <div class="dados">
          <h3 id="id-details">NÂº: <%= book[0].id %></h3>
          <p id="book">Livro</p>
          <h3><%= book[0].name %></h3>
          <p id="author">Autor</p>
          <p><%= book[0].author %></p>
          <p id="synopsis">Sinopse</p>
          <p id="description">
            <%= book[0].synopsis %>
          </p>
          <div class="button">
